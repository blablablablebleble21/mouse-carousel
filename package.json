{
  "name": "mouse-carousel-v2",
  "version": "2.0.0",
  "main": "src/main.js",
  "description": "Improved Mouse Carousel - Radial action menu",
  "author": "",
  "license": "ISC",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "rebuild": "electron-rebuild -f -w robotjs"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.2",
    "electron": "^33.2.0",
    "electron-builder": "^25.1.8"
  },
  "dependencies": {
    "robotjs": "^0.6.0"
  },
  "build": {
    "appId": "com.mousecarousel.app",
    "productName": "MouseCarousel",
    "win": {
      "target": ["portable", "nsis"],
      "requestedExecutionLevel": "asInvoker",
      "icon": "assets/icon.ico"
    },
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "config.json"
    ],
    "asar": true
  }
}
